<div class="container ">{{>menu}}</div>
<div class="container ">
  <form action="/usuario/editar/{{user.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <h3>Controle de Acesso</h3>
      <div class="form-row">
        <div class="form-group col-sm-8">
          <label for="nome">Nome</label>
          <input type="text" class="form-control" id="nome" name="nome" value="{{user.nome}}" readonly />
        </div>
        <div class="form-group col-md-4">
          <label for="cpf">CPF</label>
          <input type="text" class="form-control" id="cpf" name="cpf" value="{{user.cpf}}" readonly />
        </div>
      </div>
      <button type="submit" class="btn btn-secondary" style="margin-top: 32px">
        Atualizar
      </button>
  </form>
</div>