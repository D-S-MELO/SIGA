<div class="container ">{{>menu}}</div>
<div class="container">
  {{>mensagem}}
  {{>error_msg}}
  <div class=" form-group pull-right text-right">
    <form id="form-cadastar" action="/usuario/cadastro?_method=GET" method="GET">
      <button type="btn btn-link" id="buttonAddUser" class="btn btn-secondary" style="margin-top: 32px;">Novo
        Usu√°rio</button>
    </form>
  </div>
  <div class="form-group pull-right">
    <input type="search" class="form-control ds-input" id="buscauser" name="buscauser" placeholder="Procure pelo cpf">
  </div>
  <table id="tabela" name"tabela" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>E-mail</th>
        <th>Editar</th>
        <th>Excluir</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{nome}}</td>
        <td>{{cpf}}</td>
        <td>{{email}}</td>
        <td>
          <form id="form-editar-{{_id}}" action="/usuario/editar/{{_id}}?_method=GET" method="GET">
            <button class="btn btn-link"><i class='bx bxs-edit' id='{{_id}}'></i></button>
          </form>
        </td>
        <td>
          <form id="form-excluir-{{_id}}" action="/usuario/deletar/{{_id}}?_method=DELETE" method="POST">
            <button type="button" class="btn btn-link btn-excluir" data-id="{{_id}}"><i
                class="bx bxs-trash-alt"></i></button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>