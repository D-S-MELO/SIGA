<div class="container ">{{>menu}}</div>
<div class="container">
  {{>mensagem}}
  <div class="form-row">
    <div class=" form-group col-md-12 text-right">
      <button type="button" id="buttonAddUser" class="btn btn-secondary" style="margin-top: 32px;"
        onclick="window.location.href='http://localhost:3000/usuario/cadastro'">Novo Usuário</button>
    </div>
  </div>
  <div class="form-group pull-right">
    <input type="search" class="form-control ds-input" id="busca" name="busca" placeholder="Procure pelo cpf">
  </div>
  <table id="tabela" name"tabela" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Idade</th>
        <th>CPF</th>
        <th>Data de Nascimento</th>
        <th>Celular</th>
        <th>Fixo</th>
        <th>Sexo</th>
        <th>Escolaridade</th>
        <th>E-mail</th>
        <th>Endereço</th>
        <th>Editar</th>
        <th>Excluir</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{nome}}</td>
        <td>{{idade}}</td>
        <td>{{cpf}}</td>
        <td>{{ dateFormat dtnascimento 'DD/MM/YYYY'}}</td>
        <td>{{celular}}</td>
        <td>{{fixo}}</td>
        <td>{{sexo}}</td>
        <td>{{escolaridade}}</td>
        <td>{{email}}</td>
        <td>
          {{endereco.cep}},{{endereco.logradouro}},{{endereco.numero}},{{endereco.bairro}},{{endereco.cidade}},{{endereco.estado}}
        </td>
        <td>
          <button class="btn btn-link"><i class='bx bxs-edit' id='{{_id}}'
              onclick="window.location.href='http://localhost:3000/usuario/editar/{{_id}}'">
            </i></button>
        </td>
        <td>
          <form action="/usuario/deletar/{{_id}}?_method=DELETE" method="POST">
            <button class="btn btn-link"><i class='bx bxs-trash-alt' id='{{_id}}'></i></button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>